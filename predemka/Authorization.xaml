<Page x:Class="predemka.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:predemka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <Label Content="Авторизация" HorizontalAlignment="Center" FontSize="25"/>
            <StackPanel Orientation="Horizontal" >
                <Label Content="Логин" Width="100" FontSize="25"/>
                <TextBox x:Name="login" Width="100" Margin="3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Label Content="Пароль" Width="100" FontSize="25"/>
                <PasswordBox x:Name="pass" Width="100" Margin="3"/>
            </StackPanel>
            <Button Content="Войти" FontSize="25" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
